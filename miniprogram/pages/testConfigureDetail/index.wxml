<!--pages/testConfigureDetail/index.wxml-->
<van-divider contentPosition="left">{{ _t['信息'] }}</van-divider>
<van-cell-group>
  <van-cell title="{{ _t['名称'] }}" value="{{serviceChoiceList.length}} service" />
</van-cell-group>
<van-cell title=" ">
    <view sort="value">
      <van-row>
        <van-col span="12">{{ _t['最小值'] }}</van-col>
        <van-col span="12">{{ _t['最大值'] }}</van-col>
      </van-row>
    </view>
  </van-cell>
<van-cell-group wx:for="{{serviceChoiceList}}" wx:key="index">
  <van-divider contentPosition="left">{{serviceName[index]}}</van-divider>
  <van-cell title="{{ _t['上行功率'] }}（dBm）" >
    <view sort="value">
      <van-row>
        <van-col span="12">
          <input type="text" value="{{up.min}}"/>
        </van-col>
        <van-col span="12">
          <input type="text" value="{{up.max}}"/>
        </van-col>
      </van-row>
    </view>
  </van-cell>
  <van-cell title="{{ _t['下行功率'] }}（dBm）">
    <view sort="value">
      <van-row>
        <van-col span="12">
          <input type="text" value="{{down.min}}"/>
        </van-col>
        <van-col span="12">
          <input type="text" value="{{down.max}}"/>
        </van-col>
      </van-row>
    </view>
  </van-cell>
</van-cell-group>
<van-button type="primary" block>{{ _t['修改阈值'] }}</van-button>
